<html>
    <head>
        <title>
            <%= locals.title%>
        </title>
    </head>
    <body>

        <div>
            <ul>
                   
                <% for (let i of contact_list) { %> 
                    
                    <li>
                        <p><%= i.name %></p>
                        <p><%= i.phone %></p>
                    </li>
                    
                <% } %>
            </ul>
        </div>

        <div>
            <form action="/create-contact" method="POST">

                <input type="text" name="name" id="" placeholder="Enter Your Name" required>
                <input type="number" name="phone" id="" placeholder="Enter Your phone number" required>
                <button type="submit"> Submit </button>
            </form>
        </div>

    </body>
</html>